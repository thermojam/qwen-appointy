{
    "mcpServers": {
        "Figma-Context-MCP": {
            "command": "npx",
            "args": [
                "-y",
                "figma-developer-mcp",
                "--stdio"
            ],
            "env": {
                "FIGMA_PERSONAL_ACCESS_TOKEN": "${FIGMA_PERSONAL_ACCESS_TOKEN}",
                "FIGMA_FILE_KEY": "${FIGMA_FILE_KEY}"
            },
            "timeout": 30000
        },
        "postgresql": {
            "command": "npx",
            "args": [
                "-y",
                "@wonderwhy-er/postgresql-mcp"
            ],
            "env": {
                "DATABASE_URL": "${DATABASE_URL}"
            },
            "timeout": 30000
        }
    },
    "context-save": {
        "command": "npx",
        "args": [
            "-y",
            "@upstash/context7-mcp"
        ],
        "timeout": 30000
    },
    "hyperbrowser": {
        "command": "npx",
        "args": [
            "-y",
            "hyperbrowser-mcp"
        ],
        "env": {
            "HYPERBROWSER_API_KEY": "${HYPERBROWSER_API_KEY}"
        },
        "timeout": 300000
    }
}
